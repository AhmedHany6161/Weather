<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="#00000000"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/p_no_data"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="visible">

        <com.weatherintake41itiahy.weather.mainScreenUI.home.CustomProgress
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

    <TextView
        android:id="@+id/t_no_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:gravity="center"
        android:text="@string/there_is_no_data"
        android:textSize="20sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/out_of_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/the_data_is_not_up_to_date"
        android:textSize="18sp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mainScreenUI.home.HomeFragment">

        <LinearLayout
            android:id="@+id/home_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/top_main_fe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/recycler_background">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/imageWeatherState"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/moon_night"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.083"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cityViewId"
                    app:layout_constraintVertical_bias="0.111" />

                <TextView
                    android:id="@+id/cityViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/app_name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textDescId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/app_name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.025"
                    app:layout_constraintStart_toStartOf="@+id/imageWeatherState"
                    app:layout_constraintTop_toBottomOf="@+id/imageWeatherState"
                    app:layout_constraintVertical_bias="0.111" />

                <TextClock
                    android:id="@+id/timeViewId"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:format12Hour="h:mm a"
                    android:text="@string/app_name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.92"
                    app:layout_constraintStart_toEndOf="@+id/imageWeatherState"
                    app:layout_constraintTop_toBottomOf="@+id/cityViewId" />

                <TextClock
                    android:id="@+id/dateViewId"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:format12Hour="dd/MMM/yyyy \n EEEE"
                    android:text="@string/app_name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/timeViewId"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/imageWeatherState"
                    app:layout_constraintTop_toBottomOf="@+id/timeViewId" />

                <TextView
                    android:id="@+id/cloudPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/app_name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@drawable/cloud_ic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/main_temp"
                    app:layout_constraintTop_toBottomOf="@+id/main_temp"
                    app:layout_constraintVertical_bias="0.125" />

                <TextView
                    android:id="@+id/main_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/app_name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@drawable/temp_ic"
                    app:layout_constraintEnd_toStartOf="@+id/timeViewId"
                    app:layout_constraintHorizontal_bias="0.22"
                    app:layout_constraintStart_toEndOf="@+id/imageWeatherState"
                    app:layout_constraintTop_toBottomOf="@+id/cityViewId" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/HourlyRecHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"
                android:background="#00000000" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dailyRecHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"
                android:background="#00000000"
                android:visibility="gone" />

            <Button
                android:id="@+id/forecastFor7days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"
                android:background="#0303A9F4"
                android:text="@string/show_cast_for_7_days"
                android:textColor="@color/white" />
          
            <GridLayout
                android:id="@+id/bottom_main_fe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/bottom_background"
                android:columnCount="2"
                android:rowCount="3">

                <TextView
                    android:id="@+id/wind_degree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/wind_degree_18"
                    app:drawableTopCompat="@drawable/air_ic" />

                <TextView
                    android:id="@+id/Humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:drawableTopCompat="@drawable/humidity" />

                <TextView
                    android:id="@+id/visiablity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"

                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:drawableTopCompat="@drawable/visibility" />

                <TextView
                    android:id="@+id/Pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"

                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:drawableTopCompat="@drawable/ic_baseline_arrow_downward_24" />

                <TextView
                    android:id="@+id/feels_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:drawableTopCompat="@drawable/temp_ic" />

                <TextView
                    android:id="@+id/windSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:textSize="14sp"
                    android:textStyle="bold"

                    app:drawableTopCompat="@drawable/air_ic" />
            </GridLayout>

        </LinearLayout>


    </ScrollView>
</LinearLayout>
