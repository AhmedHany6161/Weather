<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/select_locatin">
        <ListPreference
            app:persistent="true"
            app:entries="@array/get_location_entries"
            app:entryValues="@array/get_location_values"
            app:key="home_location"
            app:title="@string/set_message"
            app:summary="%s"
            app:useSimpleSummaryProvider="true" />
        <Preference
            app:key="set_location"
            app:title="@string/no_location"
            app:defaultValue="none"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <PreferenceCategory app:title="@string/Units">
        <ListPreference
            app:defaultValue="kelvin"
            app:persistent="true"
            app:entries="@array/units_temp_name"
            app:entryValues="@array/units_temp_value"
            app:key="temp_unit"
            app:title="@string/temp"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            app:defaultValue="meter/sec"
            app:persistent="true"
            app:entries="@array/units_wind_name"
            app:entryValues="@array/units_wind_value"
            app:key="wind_speed"
            app:title="@string/wind_speed"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>


</PreferenceScreen>