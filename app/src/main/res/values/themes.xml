<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Weather" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ffab00</item>
        <item name="colorPrimaryVariant">#00bfff</item>
        <item name="colorOnPrimary">#73dcff</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00bfff</item>
        <item name="colorSecondaryVariant">#73dcff</item>
        <item name="colorOnSecondary">#e7f9ff</item>
        <item name="android:statusBarColor" tools:targetApi="l">#00688b</item>
        <item name="alertDialogTheme">@style/Theme.Weather.alert</item>
        <item name="buttonStyle">@style/Theme.Weather.alert</item>
<!--        <item name="actionBarStyle">@style/Theme.Weather.app_bar</item>-->
    </style>

    <style name="Theme.Weather.MainActivity" parent="Theme.Weather">
        <item name="android:textColor">#e5f8ff</item>
    </style>

    <style name="Theme.Weather.app_bar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@drawable/background_morning0</item>
        <item name="android:height">4dp</item>
    </style>

    <style name="Theme.Weather.alert" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">#00bfff</item>
        <item name="android:textColor">#e5f8ff</item>
        <item name="colorPrimary">#e5f8ff</item>
    </style>

    <style name="Theme.Weather.dropDown" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:background">#00bfff</item>
    </style>

    <style name="ThemeOverlay.Weather.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>