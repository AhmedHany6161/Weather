<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Weather" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#e5f8ff</item>
        <item name="colorPrimaryVariant">#006aff</item>
        <item name="colorOnPrimary">#003fff</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#b3ffff</item>
        <item name="colorSecondaryVariant">#7EDCFF</item>
        <item name="colorOnSecondary">#b3ffff</item>
        <item name="android:statusBarColor" tools:targetApi="l">#3F51B5</item>
        <item name="alertDialogTheme">@style/Theme.Weather.alert</item>

    </style>

    <style name="Theme.Weather.MainActivity" parent="Theme.Weather">
        <item name="android:textColor">#e5f8ff</item>
    </style>

    <style name="Theme.Weather.alert" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">#51B2FF</item>
        <item name="android:textColor">#e5f8ff</item>
        <item name="colorPrimary">#e5f8ff</item>
    </style>
</resources>