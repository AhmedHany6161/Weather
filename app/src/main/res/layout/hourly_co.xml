<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:background="#00FFFFFF">

    <TextView
        android:id="@+id/timeHourRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <ImageView
        android:id="@+id/imageHourRec"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/timeHourRec"
        app:layout_constraintStart_toStartOf="@+id/timeHourRec"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/cloud_46" />

    <TextView
        android:id="@+id/tempHourRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageHourRec"
        app:layout_constraintStart_toStartOf="@+id/imageHourRec"
        app:layout_constraintTop_toBottomOf="@+id/imageHourRec"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/windSpeedHourRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageHourRec"
        app:layout_constraintStart_toStartOf="@+id/imageHourRec"
        app:layout_constraintTop_toBottomOf="@+id/tempHourRec"
        app:layout_constraintVertical_bias="0.002" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/imageHourRec"
        app:layout_constraintStart_toStartOf="@+id/imageHourRec"
        app:layout_constraintTop_toBottomOf="@+id/timeHourRec" />
</androidx.constraintlayout.widget.ConstraintLayout>